<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/cppl_cr_grey_9da2ab_transparent_10" />
            <size android:height="42dp" />
            <corners android:radius="360dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale
            android:scaleWidth="100%"
            android:useIntrinsicSizeAsMinimum="true">
            <shape android:shape="rectangle">
                <corners android:radius="360dp" />
                <size
                    android:width="44dp"
                    android:height="42dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/cppl_cr_mobile_slide_to_unlock_button_progress_color" />
                <solid android:color="@color/cppl_cr_mobile_slide_to_unlock_button_progress_color" />
            </shape>
        </scale>
    </item>
</layer-list>