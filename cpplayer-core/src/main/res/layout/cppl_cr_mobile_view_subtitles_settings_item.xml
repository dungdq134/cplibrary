<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cppl_cr_mobile_background_ripple" >

    <TextView
        android:id="@+id/subtitle_settings_item_text"
        style="?attr/subtitleSettingsItemNameTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@id/subtitle_settings_item_switch"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="14sp"
        tools:text="angielski" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/subtitle_settings_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:focusable="false"
        android:clickable="false"
        android:visibility="gone"/>
</RelativeLayout>
