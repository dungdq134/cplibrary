<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_subtitle_settings_size_name"
        style="?attr/subtitleSettingsNameTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:textSize="19sp"
        android:text="@string/cppl_cr_subtitles_size" />

    <LinearLayout
        android:id="@+id/tv_subtitle_settings_size_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/cppl_cr_tv_track_selection_divider"
        android:orientation="vertical"
        android:showDividers="middle" />

    <TextView
        android:id="@+id/tv_subtitle_settings_contrast_name"
        style="?attr/subtitleSettingsNameTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:textSize="19sp"
        android:text="@string/cppl_cr_subtitles_contrast" />

    <LinearLayout
        android:id="@+id/tv_subtitle_settings_contrast_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/cppl_cr_tv_track_selection_divider"
        android:orientation="vertical"
        android:showDividers="middle" />

</LinearLayout>