<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="39dp">

    <TextView
        android:id="@+id/tv_track_selection_item_text"
        style="?attr/trackSelectionItemNameTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/tv_track_selected_indicator"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        tools:text="angielski" />

    <ImageView
        android:id="@+id/tv_track_selected_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/cppl_cr_common_ic_check_background"
        android:src="@drawable/cppl_cr_common_ic_check"
        android:visibility="invisible" />

</RelativeLayout>