<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CPPlayerCore.Mobile.CPPlayerTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/cppl_cr_color_primary</item>
        <item name="colorPrimaryVariant">@color/cppl_cr_color_primary</item>
        <item name="colorPrimaryDark">@color/cppl_cr_color_primary</item>
        <item name="colorAccent">@color/cppl_cr_color_primary</item>

        <item name="android:windowBackground">@color/cppl_cr_black_solid</item>
        <item name="android:colorBackground">@color/cppl_cr_black_solid</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="playbackControlsTimeStyle">@style/Widget.MaterialComponents.TextView</item>
        <item name="playbackMediaTitleStyle">@style/Widget.MaterialComponents.TextView</item>
        <item name="playbackControlsAtLiveEdgeIndicatorStyle">
            @style/Widget.MaterialComponents.TextView
        </item>

        <item name="trackSelectionNameTextViewStyle">@style/Widget.MaterialComponents.TextView</item>
        <item name="trackSelectionItemNameTextViewStyle">@style/Widget.MaterialComponents.TextView</item>
        <item name="subtitleSettingsNameTextViewStyle">@style/Widget.MaterialComponents.TextView</item>
        <item name="subtitleSettingsItemNameTextViewStyle">@style/Widget.MaterialComponents.TextView</item>

        <item name="skipIntroButtonStyle">@style/CPPlayerCore.Mobile.TextButtonStyle</item>
        <item name="nextEpisodeButtonStyle">@style/CPPlayerCore.Mobile.TextButtonStyle</item>
        <item name="unlockFooterTextViewStyle">@style/CPPlayerCore.Mobile.UnlockFooterTextViewStyle</item>
        <item name="unlockTextViewStyle">@style/CPPlayerCore.Mobile.UnlockTextViewStyle</item>

        <item name="doubleTapTextViewStyle">@style/CPPlayerCore.DoubleTapTextStyle</item>
    </style>

    <style name="CPPlayerCore.Mobile.ButtonStyle" parent="">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="colorControlHighlight">@color/cppl_cr_grey_a9aeb4_transparent_70</item>
    </style>

    <style name="CPPlayerCore.Mobile.BackgroundButtonStyle" parent="CPPlayerCore.Mobile.ButtonStyle">
        <item name="android:background">@drawable/cppl_cr_mobile_player_button_background</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CPPlayerCore.Mobile.BackgroundLargeButtonStyle" parent="CPPlayerCore.Mobile.BackgroundButtonStyle">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CPPlayerCore.Mobile.TextButtonStyle" parent="CPPlayerCore.Mobile.ButtonStyle">
        <item name="android:background">@drawable/cppl_cr_mobile_player_button_background_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:textColor">@color/cppl_cr_white_solid</item>
        <item name="android:textSize">14sp</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CPPlayerCore.DoubleTapTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/cppl_cr_white_solid</item>
        <item name="android:textSize">25sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DoubleTapRippleTheme">
        <item name="colorControlHighlight">@color/cppl_cr_grey_1b1b1c_transparent_35</item>
    </style>

    <style name="CPPlayerCore.Mobile.UnlockFooterTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/cppl_cr_grey_8a8f94</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CPPlayerCore.Mobile.UnlockTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/cppl_cr_white_solid</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CPPlayerCore.Mobile.SlideToUnlockButtonStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:max">100</item>
        <item name="android:progress">0</item>
        <item name="android:progressDrawable">@drawable/cppl_cr_mobile_slide_to_unlock_button</item>
        <item name="android:splitTrack">false</item>
        <item name="android:thumb">@drawable/cppl_cr_mobile_slide_to_unlock_button_thumb</item>
        <item name="android:thumbOffset">0dp</item>
    </style>

</resources>